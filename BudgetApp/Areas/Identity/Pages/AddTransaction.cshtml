@page
@model BudgetApp.Areas.Identity.Pages.AddTransactionModel
@{
}

<h2 class="mb-4">Add Transaction</h2>

<div class="container">
    <form method="post">
		<div class="form-group">
			<label asp-for="Input.Amount" class="control-label">Amount</label>
			<input asp-for="Input.Amount" class="form-control" type="number" step="0.01" />
			<span asp-validation-for="Input.Amount" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Input.Category" class="control-label">Category</label>
			<select asp-for="Input.Category" asp-items="@(new SelectList(Model.Categories, "Value", "Text"))" class="form-control">
				<option value="">Select a category</option>
			</select>
			<span asp-validation-for="Input.Category" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Input.Description" class="control-label">Description</label>
			<input asp-for="Input.Description" class="form-control" />
			<span asp-validation-for="Input.Description" class="text-danger"></span>
		</div>
        <div class="form-group">
			<label asp-for="Input.Date" class="control-label">Date</label>
			<input asp-for="Input.Date" class="form-control" type="date" />
			<span asp-validation-for="Input.Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>